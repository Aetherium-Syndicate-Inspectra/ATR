{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://atr.local/specs/envelope_schema.json",
  "title": "AkashicEnvelopeV2",
  "type": "object",
  "required": ["header", "payload", "signature"],
  "properties": {
    "header": {
      "type": "object",
      "required": ["id", "timestamp_ns", "source_agent"],
      "properties": {
        "id": {
          "type": "string",
          "description": "UUIDv7 event identifier"
        },
        "timestamp_ns": {
          "type": "integer",
          "minimum": 0
        },
        "source_agent": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "payload": {
      "type": ["object", "array", "string", "number", "integer", "boolean", "null"]
    },
    "signature": {
      "type": "string",
      "minLength": 1,
      "description": "Ed25519 signature over canonical bytes"
    }
  },
  "additionalProperties": true
}
